<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--未选中的样式-->
    <style name="bottom_normal_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--选中的样式-->
    <style name="bottom_selected_text">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 导航栏(我的） -->
    <style name="CustomMenuItemTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Gray color -->
    </style>

    <!-- 头像样式 -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- 背景样式 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/black</item>
    </style>

</resources>