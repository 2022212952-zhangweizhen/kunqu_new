<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper_texture">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:src="@drawable/taohua"
        app:layout_constraintTop_toBottomOf ="@id/year_image"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/year_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/islide"
            android:text="1月16号"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="——————————"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="23dp"
            android:textColor="@color/black"
            android:fontFamily="@font/qijic"
            android:text="甲辰年正月六日"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2024"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/qijic"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="60dp"
        android:background="@drawable/ink_box_shu"
        android:layout_marginTop="110dp"
        android:gravity="center|top"
        android:padding="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/qijic"
            android:ems="1"
            android:text="甲辰年正月六日"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/qijic"
            android:ems="1"
            android:text="甲辰年正月六日"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:fontFamily="@font/qijic"
            android:ems="1"
            android:text="甲辰年正月六日"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>